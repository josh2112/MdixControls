<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dlg="clr-namespace:Com.Josh2112.MdixControls.Dialogs">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MdixControls;component/Themes/DialogStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/MdixControls;component/Themes/ButtonStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type dlg:DialogPopup}" BasedOn="{StaticResource DialogPopupStyle}"/>
    <Style TargetType="{x:Type dlg:Dialog}" BasedOn="{StaticResource DialogStyle}"/>

</ResourceDictionary>